

<h1>Введите целое число n > 0</h1>

<%unless flash[:notice].blank?%>
  <h2 style = 'color:red'><%=flash[:notice]%></h2>
<%end%>

<%= form_with url: "/index/output", id: 'form',method: :get do |form| %>
  <%= form.number_field :inpt, min: '1'%>
  <%= form.submit id: 'submit_btn',value: "Отправить" %>
<% end %>
<br/>
<%= form_with url: "/index/show_db", id: 'db_form',method: :get do |form| %>
  <%= form.submit id: 'db_btn',value: "Показать БД" %>
<% end %>


